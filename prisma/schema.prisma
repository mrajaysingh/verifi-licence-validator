generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model License {
  id          String    @id @default(cuid())
  key         String    @unique
  email       String
  domain      String?
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  activatedAt DateTime?
  expiresAt   DateTime?
  createdBy   Admin?    @relation(fields: [adminId], references: [id])
  adminId     String?

  @@map("licenses")
}

model Admin {
  id                  String    @id @default(cuid())
  email               String    @unique
  username            String    @unique
  password            String
  name                String
  secretKey           String    @default("VERIFYADMIN8268")
  profileImage        String?   // URL to stored image
  mobileNumber        String?
  lastKnownIp         String?
  isSetupEnabled      Boolean   @default(true)  // Default to enabled
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  lastLoginAt         DateTime?
  verificationCode    String?
  verificationExpires DateTime?
  licenses            License[]

  @@map("admins")
}
